<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/green"
    tools:context=".CustomModeActivity">

    <TextView
        android:id="@+id/colTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Columns"
        android:textSize="30dp"
        android:layout_above="@id/colProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        />

    <ProgressBar
        android:id="@+id/colProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colSeekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:max="20"
        android:min="2"/>

    <SeekBar
        android:id="@+id/colSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_above="@id/rowTextView"
        android:max="20"
        android:min="2"/>

    <TextView
        android:id="@+id/rowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Rows"
        android:textSize="30dp"
        android:layout_above="@id/rowProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        />

    <ProgressBar
        android:id="@+id/rowProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rowSeekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:max="40"
        android:min="2"/>

    <SeekBar
        android:id="@+id/rowSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:max="40"
        android:min="2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:background="@color/red"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Submit" />

</RelativeLayout>